@model List<LungCancer.Models.Prediction>

@{
    ViewData["Title"] = "Prediction History";
}

<h1>📊 Prediction History</h1>

@if (Model == null || Model.Count == 0)
{
    <p>No predictions found.</p>
}
else
{
    <table style="width:80%; margin:auto; border-collapse:collapse; text-align:center;">
        <thead>
            <tr style="background-color:#6a0cff; color:white;">
                <th style="padding:10px; border:1px solid #ccc;">Filename</th>
                <th style="padding:10px; border:1px solid #ccc;">Predicted Class</th>
                <th style="padding:10px; border:1px solid #ccc;">Confidence (%)</th>
                <th style="padding:10px; border:1px solid #ccc;">Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr style="background-color:rgba(255,255,255,0.2);">
                    <td style="padding:10px; border:1px solid #ccc;">@item.Filename</td>
                    <td style="padding:10px; border:1px solid #ccc;">@item.PredictedClass</td>
                    <td style="padding:10px; border:1px solid #ccc;">%@item.Confidence</td>
                    <td style="padding:10px; border:1px solid #ccc;">@item.CreatedAt.ToString("g")</td>
                </tr>
            }
        </tbody>
    </table>
}

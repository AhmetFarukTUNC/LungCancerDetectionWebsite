@model LungCancer.Models.ContactMessage

@{
    ViewData["Title"] = "İletişim";
}

<div class="container my-5">
    <h1 class="text-center mb-5 display-5 fw-bold" style="color:#6a0cff;">📬 Bize Ulaşın</h1>

    @if (ViewBag.Success != null)
    {
        <div class="alert alert-success text-center fw-bold">@ViewBag.Success</div>
    }

    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5">
                    <form asp-action="Index" method="post">
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-semibold">Adınız</label>
                            <input asp-for="Name" class="form-control form-control-lg" placeholder="Adınızı girin" />
                            <span asp-validation-for="Name" class="text-danger fw-bold"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Email" class="form-label fw-semibold">Email</label>
                            <input asp-for="Email" class="form-control form-control-lg" placeholder="Email adresinizi girin" />
                            <span asp-validation-for="Email" class="text-danger fw-bold"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Message" class="form-label fw-semibold">Mesajınız</label>
                            <textarea asp-for="Message" class="form-control form-control-lg" rows="6" placeholder="Mesajınızı yazın"></textarea>
                            <span asp-validation-for="Message" class="text-danger fw-bold"></span>
                        </div>

                        <div class="d-grid mt-3">
                            <button type="submit" class="btn btn-gradient btn-lg fw-bold">Gönder</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-4 text-muted">
                <p>📧 info@lungcancer.com | ☎ +90 555 123 4567</p>
                <p>📍 İstanbul, Türkiye</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
